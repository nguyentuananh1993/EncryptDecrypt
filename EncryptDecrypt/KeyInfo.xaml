<Window x:Class="EncryptDecrypt.KeyInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KeyInfo" Height="350" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            
        </Grid.RowDefinitions>
        <Label Content="Public key:" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center"/>
        <RichTextBox Grid.Column="1" Grid.Row="2" Block.LineHeight="10"/>
        <Label Content="Private key:" Grid.Column="1" Grid.Row="3" VerticalAlignment="Center"/>
        <RichTextBox Grid.Column="1" Grid.Row="4"/>
        <Button Content="Exit" Grid.Column="1" Grid.Row="6" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,4" Width="70" />
    </Grid>
</Window>
